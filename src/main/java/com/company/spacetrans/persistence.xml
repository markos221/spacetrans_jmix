        <class>com.company.spacetrans.entity.AstronomicalBody</class>
        <class>com.company.spacetrans.entity.Customer</class>
        <class>com.company.spacetrans.entity.Individual</class>
        <class>com.company.spacetrans.entity.Discounts</class>
        <class>com.company.spacetrans.entity.Dimensions</class>
        <class>com.company.spacetrans.entity.Coordinates</class>
        <class>com.company.spacetrans.entity.Spaceport</class>
        <class>com.company.spacetrans.entity.Carrier</class>
        <class>com.company.spacetrans.entity.WaybillItem</class>
        <class>com.company.spacetrans.entity.Waybill</class>
        <class>com.company.spacetrans.entity.Company</class>
