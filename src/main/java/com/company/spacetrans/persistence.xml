<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="spacetrans" transaction-type="RESOURCE_LOCAL">

        <class>com.company.spacetrans.entity.Gas</class>
        <class>com.company.spacetrans.entity.AtmosphericGas</class>
        <class>com.company.spacetrans.entity.Atmosphere</class>
        <class>com.company.spacetrans.entity.Moon</class>
